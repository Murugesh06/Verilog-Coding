module Traffic_controller_fsm_tb;
reg clk,reset,in;
wire red_light,yellow_light,green_light;
Traffic_controller_fsm uut(clk,reset,in,red_light,yellow_light,green_light);
always #5 clk=~clk;
initial begin
clk=0;
reset=1;
in=0;
#10
reset=0;
#20
in=1;
#10
in=0;
#20
in=1;
#10
in=0;
#20
in=1;
#10
in=0;
#20
#40
$finish();
end
initial begin
$monitor("Time=%0t | State: Green=%b, Yellow=%b, Red=%b",
                  $time, red_light,yellow_light,green_light);
end
endmodule
